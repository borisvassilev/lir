#! /usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset

export LIR_LIBPATH="$HOME"/lib/lir
export LIR_BINPATH="$HOME"/bin
export NOWEB_LIBPATH="$HOME"/lib/noweb

mkdir --parents "$LIR_LIBPATH"
mkdir --parents "$LIR_BINPATH"

echo "*** Making lir..."
make
echo "--> Done"
echo "*** Installing lir..."
make install
echo "--> Done"
rm -r .lir
echo "*** Using lir to tangle and weave lir..."
lir lir.lir --bibliography=lir.bib
echo "--> Done"
echo "*** Weaved document is in lir.html ***"
