#! /usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset

notangle -t8 -R":make" lir.lir > Makefile

echo "*** Pre-cleaning..."
make clean
echo "*** Making lir..."
make
echo "--> Done"
echo "*** Installing lir..."
make install
echo "--> Done"
rm -rf .lir
echo "*** Using lir to tangle and weave lir..."
lir tangle lir.lir
lir make lir.lir
echo "--> Done"
echo "*** Weaved document is in lir.html ***"
